<script>
    function publicarComentario() {
        let texto = document.getElementById('inputComentario').value;
        if(texto) {
            let area = document.getElementById('areaComentarios');
            area.innerHTML += '<div class="alert alert-secondary">Usuario: ' + texto + '</div>';
            document.getElementById('inputComentario').value = '';
        }
    }
</script>

